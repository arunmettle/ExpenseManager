@model ExpenseManager.Models.SpendLimit

<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker.css" rel="stylesheet">

<div>
    <div class="row">
        <div class="col-md-8">
            <form id="spendLimitForm">
                <input type="hidden" asp-for="ItemId" />
                <div class="form-group">
                    <label asp-for="SpendingCap" class="control-label"></label>
                    <input asp-for="SpendingCap" class="form-control" />
                </div>
                <div class="form-group" id="calender-container1">
                    <label asp-for="StartDate" class="control-label"></label>
                    <div class="input-group date">
                        <input asp-for="StartDate" type="text" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                    </div>
                </div>
                <div class="form-group" id="calender-container2">
                    <label asp-for="EndDate" class="control-label"></label>
                    <div class="input-group date">
                        <input asp-for="EndDate" type="text" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="IsWeekly" class="control-label"></label>
                    <input asp-for="IsWeekly" type="checkbox" class="form-control"/>
                </div>
                <div class="form-group">
                    <button type="button" id="btnSubmit" class="btn btn-block btn-info">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
